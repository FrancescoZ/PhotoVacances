<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.photovacances.francescozanoli.photovacances.ImageFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageButton
                        android:id="@+id/rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:onClick="rightClick"
                        android:src="@drawable/arrow_right"
                        android:contentDescription="@string/hello_world" />
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"
                        android:background="#000000"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="top|right"
                        android:onClick="onEditImageClik"
                        android:contentDescription="@string/hello_world"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/esc"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:background="#000000"
                        android:layout_gravity="top|right"
                        android:onClick="getBack"
                        android:contentDescription="@string/hello_world" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#00000c"
                            android:gravity="left"
                            android:text="Title"
                            android:layout_marginLeft="20dp"
                            android:padding="10dp"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:layout_alignParentBottom="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#00000c"
                            android:onClick="showComment"
                            android:padding="10dp"
                            android:layout_toEndOf="@+id/title"
                            android:textColorHighlight="#F555F5"
                            android:text="...Click to see comments"
                            android:textColor="#fff7"
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"/>


                    <ImageButton
                        android:id="@+id/leftArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:onClick="leftClick"
                        android:src="@drawable/arrow_left"
                        android:contentDescription="@string/hello_world"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


    </RelativeLayout>
</FrameLayout>
